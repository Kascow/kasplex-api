{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": ".",
    "declaration": true,
    "declarationDir": "./dist/types" 
  },
  "include": ["api/**/*", "index.ts"],
  "exclude": ["node_modules", "dist"]
}
